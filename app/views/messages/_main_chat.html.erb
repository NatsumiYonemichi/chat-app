<div class="main_header">
  <div class="left-header">
    <div class="chat_user_name">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="chat_end_btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main_chat">
  <div class="chat_messages">
    <div class="upper_message">
      <div class="user_name">Tom</div>
      <div class="chat_date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower_message">
      <div class="chat_content">おはよう</div>
    </div>
  </div>

  <div class="chat_messages">
    <div class="upper_message">
      <div class="user_name">Sim</div>
      <div class="chat_date">2020/3/31(Wed) 12:47:30</div>
    </div>
    <div class="lower_message">
      <div class="chat_content">こんばんは</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>